{
    "name": "bf6-portal-scripting-template",
    "experienceName": "Scripting Template",
    "version": "1.5.0",
    "type": "module",
    "description": "Scripting template for Battlefield 6 Portal (use \"Use this template\" on GitHub to create a new project)",
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "init": "node scripts/init.js",
        "update": "node scripts/update.js",
        "refresh-ai": "node scripts/generate-ai-context.js",
        "build": "bf6-portal-bundler --entrypoint ./src/index.ts --outDir ./dist",
        "export-thumbnail": "node scripts/export-thumbnail.js",
        "minify-spatials": "node scripts/minify-all-spatials.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettier": "prettier --no-error-on-unmatched-pattern --write '**/*.{js,json,md,mjs,ts}'",
        "deploy": "npm run build && node scripts/deploy.js --script dist/bundle.ts --strings dist/bundle.strings.json --versionBump patch",
        "deploy:patch": "npm run deploy",
        "deploy:minor": "npm run build && node scripts/deploy.js --script dist/bundle.ts --strings dist/bundle.strings.json --versionBump minor",
        "deploy:major": "npm run build && node scripts/deploy.js --script dist/bundle.ts --strings dist/bundle.strings.json --versionBump major"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deluca-mike/bf6-portal-scripting-template.git"
    },
    "keywords": [
        "template",
        "portal",
        "battlefield",
        "battlefield-6",
        "bf6"
    ],
    "author": "Michael De Luca",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/deluca-mike/bf6-portal-scripting-template/issues"
    },
    "homepage": "https://github.com/deluca-mike/bf6-portal-scripting-template#readme",
    "devDependencies": {
        "@bf6mods/portal": "^1.1.0",
        "@typescript-eslint/eslint-plugin": "^8.56.0",
        "@typescript-eslint/parser": "^8.56.0",
        "bf6-portal-bundler": "^1.3.0",
        "bf6-portal-mod-types": "^2.1.0",
        "bf6-portal-utils": "^8.0.0",
        "dotenv": "^17.3.1",
        "eslint": "^10.0.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "prettier": "^3.8.1",
        "quickjs-types": "^1.1.0",
        "sharp": "^0.34.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.0"
    }
}
